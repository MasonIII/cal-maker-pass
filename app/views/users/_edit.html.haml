#user-container
    = form_tag(controller: :users, action: :update) do
        #show-title Details about #{@user.name}
        = label :user, :first_name, 'First Name', class: "attribute-label"
        = text_field :user, :first_name, value: @user.first_name, class: "attribute-value"
        = label :user, :last_name, 'Last Name', class: "attribute-label"
        = text_field :user, :last_name, value: @user.last_name, class: "attribute-value"

        = label :user, :sid, 'SID', class: "attribute-label"
        = text_field :user, :sid, value: @user.sid, class: "attribute-value"

        = label :user, :email, 'Email', class: "attribute-label"
        = text_field :user, :email, value: @user.email, class: "attribute-value"

        = label :user, :privilege, 'Privilege', class: "attribute-label"
        %select{class: "edit-user-input", id: "user_privilege", name: "user[privilege]"}
            - @available_privileges.each do |option|
                - text, value, is_selected = option
                %option{ :value => value, :selected => is_selected }= text

    .buttons-container
        #edit-user-back.button.button-red Back
        #edit-user-update.button.button-blue Update
        - if @admin_privilege > @user_privilege
            #edit-user-delete.button.button-red Delete
